{
	"name": "shigen",
	"private": true,
	"license": "ISC",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "npm run --workspaces --if-present build",
		"postbuild": "node postbuild.mjs",
		"test": "npm run --workspaces --if-present test",
		"lint": "eslint \"**/*.{js,ts}\"",
		"format": "prettier --write \"**/*.{js,ts,json,md}\""
	},
	"devDependencies": {
		"@shigen/eslint-plugin": "0.3.1",
		"@types/node": "20.7.1",
		"@typescript-eslint/eslint-plugin": "6.7.3",
		"@typescript-eslint/parser": "6.7.3",
		"eslint": "8.50.0",
		"fast-glob": "3.3.1",
		"prettier": "3.0.3",
		"tsx": "3.13.0",
		"typescript": "5.2.2",
		"wireit": "0.14.0"
	}
}
