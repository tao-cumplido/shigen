{
	"name": "@shigen/eslint-plugin",
	"version": "0.13.0",
	"description": "General purpose plugin for ESLint",
	"keywords": [
		"eslint",
		"lint",
		"js",
		"javascript",
		"ts",
		"typescript",
		"es6"
	],
	"license": "ISC",
	"author": "Tao Cumplido",
	"repository": "https://github.com/tao-cumplido/shigen/tree/main/packages/eslint-plugin",
	"bugs": "https://github.com/tao-cumplido/shigen/issues",
	"files": [
		"readme.md",
		"dist/**/*"
	],
	"type": "module",
	"exports": {
		".": "./dist/index.js"
	},
	"scripts": {
		"prepublishOnly": "wireit",
		"test": "wireit",
		"build": "wireit"
	},
	"wireit": {
		"prepublishOnly": {
			"dependencies": [
				"test",
				"build"
			]
		},
		"test": {
			"command": "node --test-reporter spec --test 'src/**/*.test.ts'",
			"files": [
				"src/**/*.ts"
			],
			"output": []
		},
		"build": {
			"command": "tsc --build tsconfig.json",
			"clean": "if-file-deleted",
			"files": [
				"src/**/*.ts",
				"!src/**/*.test.ts",
				"!src/tools/test.ts",
				"../../tsconfig.base.json",
				"tsconfig.json"
			],
			"output": [
				"dist/**",
				"*.tsbuildinfo"
			]
		}
	},
	"engines": {
		"node": "^18.18.0 || >=20.9.0"
	},
	"dependencies": {
		"@shigen/enum": "~0.5.0",
		"minimatch": "^10.0.3"
	},
	"devDependencies": {
		"@types/eslint": "9.6.1",
		"@types/estree": "1.0.8",
		"@typescript-eslint/types": "8.42.0",
		"typescript-eslint": "8.42.0",
		"ajv": "8.17.1",
		"eslint": "9.35.0",
		"dedent": "1.7.0"
	},
	"peerDependencies": {
		"typescript-eslint": "^8.0.0",
		"eslint": "^9.0.0"
	},
	"peerDependenciesMeta": {
		"typescript-eslint": {
			"optional": true
		}
	}
}
