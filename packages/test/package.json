{
	"name": "@shigen/test",
	"version": "0.2.0",
	"description": "Tools for testing",
	"keywords": [
		"test",
		"file",
		"system",
		"fs",
		"fixture",
		"temp",
		"async",
		"await",
		"using",
		"symbol",
		"dispose",
		"asyncdispose"
	],
	"license": "ISC",
	"author": "Tao Cumplido",
	"repository": "https://github.com/tao-cumplido/shigen/tree/main/packages/test",
	"bugs": "https://github.com/tao-cumplido/shigen/issues",
	"scripts": {
		"build": "wireit",
		"postbuild": "wireit",
		"test": "wireit"
	},
	"wireit": {
		"build": {
			"command": "tscd"
		},
		"postbuild": {
			"command": "attw --pack ."
		},
		"test": {
			"command": "tsx --tsconfig tsconfig.test.json --test-reporter spec --test 'src/**/*.test.ts'",
			"files": [
				"src/**/*.ts"
			],
			"output": []
		}
	},
	"engines": {
		"node": "^18.18.0 || >=20.4.0"
	},
	"dependencies": {
		"execa": "^8.0.1",
		"type-fest": "^4.8.3"
	},
	"peerDependencies": {
		"@types/node": "^18.18.0 || >=20.4.0"
	},
	"peerDependenciesMeta": {
		"@types/node": {
			"optional": true
		}
	},
	"exports": {
		"./fs": {
			"import": {
				"types": "./dist/module/fs/fixture.d.ts",
				"default": "./dist/module/fs/fixture.js"
			},
			"require": {
				"types": "./dist/commonjs/fs/fixture.d.ts",
				"default": "./dist/commonjs/fs/fixture.js"
			}
		}
	}
}
